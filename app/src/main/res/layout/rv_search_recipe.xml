<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <ImageView
        android:id="@+id/iv_recipe_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/cd_iv_search_recipe_image"
        android:scaleType="fitXY"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_recipe_title"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/iv_recipe_image"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAppearance="@style/TextAppearance.FoodHelper.Headline5"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tv_recipe_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recipe_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/iv_recipe_image"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.FoodHelper.Headline5"
        tools:text="calories: 40" />

    <TextView
        android:id="@+id/tv_recipe_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recipe_calories"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/iv_recipe_image"
        android:textAppearance="@style/TextAppearance.FoodHelper.Headline5"
        tools:text="protein: 40" />
</RelativeLayout>